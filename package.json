{
  "name": "critical",
  "version": "4.0.1",
  "description": "Extract & Inline Critical-path CSS from HTML",
  "author": "Addy Osmani",
  "license": "Apache-2.0",
  "type": "module",
  "repository": "addyosmani/critical",
  "scripts": {
    "jest": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "xo": "xo",
    "test": "npm run xo && npm run jest --runInBand"
  },
  "files": [
    "cli.js",
    "index.js",
    "src"
  ],
  "bin": "cli.js",
  "keywords": [
    "critical",
    "path",
    "css",
    "optimization"
  ],
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "clean-css": "^5.3.0",
    "common-tags": "^1.8.2",
    "css-url-parser": "^1.1.3",
    "data-uri-to-buffer": "^4.0.0",
    "debug": "^4.3.4",
    "find-up": "^6.3.0",
    "get-stdin": "^9.0.0",
    "globby": "^13.1.1",
    "got": "^12.1.0",
    "group-args": "^0.1.0",
    "indent-string": "^5.0.0",
    "inline-critical": "^9.0.1",
    "is-glob": "^4.0.3",
    "joi": "^17.6.0",
    "lodash": "^4.17.21",
    "make-dir": "^3.1.0",
    "meow": "^10.1.2",
    "oust": "^1.2.0",
    "p-all": "^4.0.0",
    "penthouse": "^2.3.3",
    "plugin-error": "^1.0.1",
    "postcss": "^8.4.14",
    "postcss-discard": "^2.0.0",
    "postcss-image-inliner": "^5.0.0",
    "postcss-url": "^10.1.3",
    "replace-ext": "^2.0.0",
    "slash": "^4.0.0",
    "tempy": "^3.0.0",
    "through2": "^4.0.2",
    "vinyl": "^2.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/plugin-transform-modules-commonjs": "^7.18.2",
    "async": "^3.2.3",
    "babel-jest": "^28.1.0",
    "finalhandler": "^1.2.0",
    "get-port": "^6.1.2",
    "jest": "^28.1.0",
    "nock": "^13.2.4",
    "normalize-newline": "^4.1.0",
    "serve-static": "^1.15.0",
    "stream-array": "^1.1.2",
    "stream-assert": "^2.0.3",
    "vinyl-source-stream": "^2.0.0",
    "xo": "^0.49.0"
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "rules": {
      "capitalized-comments": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/string-content": "off",
      "unicorn/no-reduce": "off",
      "unicorn/no-array-reduce": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/no-fn-reference-in-iterator": "off"
    },
    "overrides": [
      {
        "files": "test/*.js",
        "envs": [
          "jest"
        ]
      }
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 120,
    "bracketSpacing": false
  },
  "jest": {
    "moduleNameMapper": {
      "#(.*)": "<rootDir>/node_modules/$1"
    },
    "roots": [
      ""
    ]
  }
}
